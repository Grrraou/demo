APP_NAME=kaizenCRM
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_PORT=8080
APP_URL=http://localhost:8080
ENV=dev # dev or prod

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# Laravel â†’ Loki (when Grafana stack is running). Add "loki" to LOG_STACK (e.g. single,loki) and set LOG_SERVER. Run scheduler: php artisan schedule:work
LOG_SERVER=
LOG_APP=

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=erp
DB_USERNAME=erp
DB_PASSWORD=secret

PGADMIN_PORT=8082
# Must be a valid email; .local / .test are rejected by pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@rootsolve.org
PGADMIN_DEFAULT_PASSWORD=admin

GRAFANA_PORT=8083
LOKI_PORT=8084
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

SESSION_DRIVER=redis
SESSION_LIFETIME=120

BROADCAST_CONNECTION=reverb
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Reverb (WebSocket server)
REVERB_APP_ID=erp-local
REVERB_APP_KEY=erp-local-key
REVERB_APP_SECRET=erp-local-secret
REVERB_HOST=reverb
REVERB_PORT=8085
REVERB_SCHEME=http

# Frontend Reverb connection (for Laravel Echo)
VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8080

MAIL_MAILER=log

# Jitsi Meet (Self-hosted video conferencing)
JITSI_HOST=http://localhost:8443
JITSI_PORT=8443
JITSI_PUBLIC_URL=http://localhost:8443
JVB_PORT=10000
# Internal Jitsi passwords (change in production)
JICOFO_COMPONENT_SECRET=s3cr3t
JICOFO_AUTH_PASSWORD=jicofopass
JVB_AUTH_PASSWORD=jvbpass
JIGASI_XMPP_PASSWORD=jigasipass
JIBRI_RECORDER_PASSWORD=jibrirecorderpass
JIBRI_XMPP_PASSWORD=jibrixmpppass

VITE_APP_NAME="${APP_NAME}"
